%div.page-header.text-center#center-header
  %h1 Create New User
%div.container
  %div.row
    %div.col-md-6.col-md-offset-3.text-center#login
      = render partial: "shared/errors", locals: {target: @user}
      .form-
        =form_for([:admin, @user]) do |f|
          %div.form-group
            %p=f.label :email
            %p=f.text_field :email
          %div.form-group  
            %p=f.label :first_name
            %p=f.text_field :first_name
          %div.form-group  
            %p=f.label :last_name
            %p=f.text_field :last_name
          %div.form-group  
            %select{ :name => "user[role]" }
              %option{:value => 0}= "User"
              %option{:value => 1}= "Admin"      
          %div.form-group  
            %p=f.submit