%div.page-header.text-center#center-header
  %h2 Login
%div.container
  %div.row.text-center
    %div.col-md-6.col-md-offset-3#workouts
      .form-horizontal
        =form_for(:session, url: "/login" ) do |f|
          %div.form-group
            %p=f.label :email
            %p=f.text_field :email
            %p=f.label :password
            %p=f.password_field :password
            %p=f.submit "Login"
        %h4 -- OR --   
        %h3=link_to "Create New User", new_user_path