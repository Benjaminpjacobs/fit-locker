%div.container
  %div.row
    %div.col-md-4.col-md-offset-1
      %h3 Workouts
      %div.list-group
      - @workouts.each do |workout|
        %div.list-group-item
          %h3.list-group-item-heading= link_to "#{workout.name} - #{workout.category.capitalize}", user_workout_path(current_user, workout)
          %p= workout.date
          = link_to "Edit", edit_user_workout_path(current_user, workout)
          = link_to "Delete", user_workout_path(current_user, workout), method: "delete"
      %br
      =link_to "Add New Workout", new_user_workout_path(current_user)



