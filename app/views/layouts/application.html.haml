!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FitnessLocker
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link(rel="stylesheet" type="text/css" href="stylesheets/appliaction.css")  
    %link(link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")  
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      %div.container-fluid
        %div.navbar-header.navbar-brand 
          Fitness Locker

        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            -# %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            -#   Jobs
            -#   %span.caret
            -# %ul.dropdown-menu{:role => "menu"}
            -#   %li
            -#     %a{:href => jobs_path(sorted: "location")} Sorted By Location
            -#   %li
            -#     %a{:href => jobs_path(sorted: "level_of_interest")} Sorted By Interest

        %ul.nav.navbar-nav.navbar-right
          -if current_user
            %li=link_to "Dashboard", user_dashboard_index_path(current_user)
            %li=link_to "Workouts", user_workouts_path(current_user)
            %li=link_to "Exercises", muscle_group_index_path
            %li=link_to "Logout", login_path, method: :delete
            -if current_user.admin?
              %li=link_to "Users", admin_users_path
    -if !flash[:success].nil?
      .container
        .row.text-center
          .col-md-4.text-center#flash=flash[:success]
    = yield
